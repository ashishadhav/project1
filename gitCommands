git branch

git branch branch_name               //create new branch

git checkout branch_name           //switch branch to brname

git clone "ssh link"

git push "name" "branch name"
 
git merge "branch name"

git pull "name" "branch"


git tag tagname -m  "message"      
git checkout hash_key         //switch to  commit
git checkout tagname           //switch to tagname


